# Conditional test

number = 7
print("Is number == 7? I predict true")
print(number == 7)

name = "Tiago"
print("/nIs name == Tiago? I predict true")
print(name == "Tiago")

grade = 85
print("/nIs grade >= 70? I predict true")
print(grade >= 70)

number = 100
print("Is number < 99? I predict true")
print(number < 99)

city = "Anderson"
print("/nIs city == New York? I predict false")
print(city == "New York")

age = 20
print("/nIs age < 19? I predict false")
print(age < 19)

weather = "Sunny"
print("/nIs weather == Rain? I predict false")
print(weather == "Rain")

number = 40
print("Is number < 37? I predict false")
print(number < 37)

# More conditional tests

fruit = 'apple'
print("Is fruit == 'apple'? I predict True.")
print(fruit == 'apple')

animal = 'lion'
print("\nIs animal != 'elephant'? I predict True.")
print(animal != 'elephant')

color = 'Blue'
print("\nIs color.lower() == 'blue'? I predict True.")
print(color.lower() == 'blue')

age = 25
print("\nIs age > 21? I predict True.")
print(age > 21)

temperature_celsius = 15
print("\nIs temperature_celsius <= 20? I predict True.")
print(temperature_celsius <= 20)

is_sunny = True
is_warm = False
print("\nIs it sunny and warm? I predict False.")
print(is_sunny and is_warm)

is_raining = True
is_cold = True
print("\nIs it raining or cold? I predict True.")
print(is_raining or is_cold)

fruits_list = ['apple', 'banana', 'orange']
print("\nIs 'banana' in fruits_list? I predict True.")
print('banana' in fruits_list)

vegetables_list = ['carrot', 'broccoli', 'spinach']
print("\nIs 'tomato' not in vegetables_list? I predict True.")
print('tomato' not in vegetables_list)

# Alien colors 1

alien_color = 'green'

if alien_color == 'green':
    print("Congratulations, You just earned 5 points.")

alien_color = 'red'

if alien_color == 'green':
    print("Congratulations, You just earned 5 points.")

# Alien color 2

