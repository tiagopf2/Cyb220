# Pizzas
pizzas = ['Margherita', 'Pepperoni', 'Vegetarian']

for pizza in pizzas:
    print(f"I like {pizza} pizza")

print("Margherita, Pepperoni, and Vegetarian")
print("I really love pizza!")

# Animals

animals = ['camell', 'horse', 'donkey']

for animal in animals:
    print(f"A {animal} would be fun to ride.")

print("Any of this animals would be fun to ride!.")

# Counting to twenty

for number in range(1, 21):
    print(number)

# One million

for number in range(1, 1000001):
    print(number)

# Summing a million


minimum = min(range(1, 1000001))
maximum = max(range(1, 1000001))

print(minimum)
print(maximum)

total_sum = sum(range(1, 1000001))

print(total_sum)

# Odd numbers

odd_numbers = list(range(1, 21, 2))

for number in odd_numbers:
    print(number)

# Threes
multiples_3 = list(range(3, 31, 3))

for number in multiples_3:
    print(number)

# Cubes

cubes = [number ** 3 for number in range(1, 11)]

for cube in cubes:
    print(cube)

# Cube comprehension

print(cubes)

# Slices

print(f"The first three items of this list are:{cubes[:3]}")

print(f"The last three items of this list are:{cubes[-3:]}")

# My pizzas, your pizzas

pizzas.append('Pepperoni')

for pizza in pizzas:
    print (f'My favourite pizzas are {pizza}')

friend_pizzas = ['Margherita', 'Pepperoni', 'Vegetarian']

friend_pizzas.append('Hawaiian')

for pizza in friend_pizzas:
    print (f"My friend's favourite pizzas are {pizza}")

